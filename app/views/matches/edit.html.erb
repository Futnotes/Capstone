<%= form_for @match do |f| %>


<%= f.hidden_field :home_team_id, value: params[:home_team_id] %>
  
  <%= f.label :away_team %>
  <%= f.text_field :away_team_id %>

  <%=f.text_field :team_name, :value => @team_name%>

 <%= f.label "#{@match.home_team.team_name} Score" %>
  <%= f.text_field :home_team_score %>

  <%= f.label "#{@match.away_team.team_name} Score"%>
  <%= f.text_field :away_team_score %>

  <%= f.label :kick_off %>
  <%= f.datetime_select :kick_off %>
  
  <%= f.submit "Save" %>
<% end %>
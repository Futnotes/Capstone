<%= form_for @match do |f| %>

  <%= f.hidden_field :home_team_id, value: params[:home_team_id] %>
  
  <%= f.label :away_team %>
  <%= f.text_field :away_team_id %>

  <%= f.label :kick_off %>
  <%= f.datetime_select :kick_off %>
  
  <%= f.submit "Save" %>
<% end %>

